        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "baseUrl": "./",
        "incremental": true
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/index.css"
    ]
}
