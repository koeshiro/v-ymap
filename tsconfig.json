{
  "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "baseUrl": "./",
      "incremental": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "./dist/",
      "types": ["@yandex/ymaps3-types"],
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "window.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/index.css",
    "tests/",
  ]
}
